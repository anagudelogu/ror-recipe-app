
<%- if controller_name != 'sessions' %>
  <div class="mt-8 text-center">
    Already have an account?
    <span class="block text-center">
    <%= link_to "Log in", new_session_path(resource_name), class: 'font-bold text-slate-900'  %><br />
    </span> 
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-8 text-center text-sm">
    Don't have an account yet?
    <span class="block text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'font-bold text-slate-900 text-md' %><br />
    </span>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-4 mb-3 text-center text-sm">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-bold text-slate-900' %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' && controller_name != 'registrations' %>
 <div class="text-center text-sm">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'font-bold text-slate-900' %><br />
 </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
