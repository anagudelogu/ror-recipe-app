<li class="border-2 border-slate-800 rounded py-6 px-12 w-1/2 mx-auto my-6">
  <%= link_to recipe_path(recipe), class: 'block flex justify-between mb-8 gap-10' do %>
    <h3 class="text-2xl w-1/3 font-bold">
      <%= recipe.name %>
    </h3>
    <p class="flex-1 w-2/3">
      <%= recipe.description %>
    </p>
  <% end %>
  <%= button_to "DELETE", recipe_path(recipe), { method: :delete, data: { turbo: false }, class: 'btn-primary'} %>
</li>